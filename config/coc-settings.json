{
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "codeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "clang-format-style-options.priority": 99,
  "clang-format-style-options.shortcut": "voldikss",
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.enableFloatinput": true,
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.3/clangd_15.0.3/bin/clangd",
  "clangd.enabled": true,

  "python.formatting.autopep8Path": "/home/lv/.local/bin/autopep8",
  "markdown-preview-enhanced.previewTheme": "atom-dark.css",

  "pyright.enable": true,
  "pyright.completion.snippetSupport": true,
  "python.pythonPath": "/usr/bin/python3.8",
  "python.analysis.extraPaths": ["./"],
  "clangd.fallbackFlags": [],
  "clangd.arguments": [
      "--query-driver=/home/lv/works/recipes-svw-cns3.0/dev/dist/toolchain/aarch64-linux-gnu/1/workspace/bin/aarch64-linux-gnu-gcc",
      "--query-driver=/home/lv/works/recipes-svw-cns3.0/dev/dist/toolchain/aarch64-linux-gnu/1/workspace/bin/aarch64-linux-gnu-g++"
  ]
